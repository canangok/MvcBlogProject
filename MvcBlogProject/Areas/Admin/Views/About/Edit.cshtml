@model MvcBlogProject.Models.AboutViewModel
@{
    ViewBag.Title = "Hakkımda Düzenleme Sayfası";
}
<hr />
<form>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <!-- <label>Başlık</label>-->
                @Html.DisplayFor(i => i.Title)
            </div>
            <div class="col">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Başlık giriniz." })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
               @Html.LabelFor(i=> i.Description)
            </div>
            <div class="col">
                <!-- <input type="text" class="form-control" value="@Html.Raw(@Model.Description)" />-->
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "İçerik giriniz" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Düzenle" class="btn btn-info" />
    </div>
</form>