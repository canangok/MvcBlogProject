@model AboutPage
@{
    ViewBag.Title = "Hakkımda Düzenleme Sayfası";
}
<hr />
<form>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label>Başlık</label>
            </div>
            <div class="col">
              <!--  <input type="text" class="form-control" value="@Model.TitleName" />-->
                @Html.EditorFor(model=> model.TitleName , new {htmlAttributes = new { @class="form-control",placeholder="Başlık giriniz"} })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label>İçerik</label>
            </div>
            <div class="col">
               <!-- <input type="text" class="form-control" value="@Html.Raw(@Model.AboutDescription)" />-->
                @Html.EditorFor(model => model.AboutDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "İçerik giriniz" } })
            </div>
        </div>
    </div>
 
    <div class="form-group">
        <input type="submit" value="Düzenle" class="btn btn-info" />
    </div>
</form>