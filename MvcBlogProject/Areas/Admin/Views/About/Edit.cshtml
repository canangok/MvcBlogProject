@model MvcBlogProject.Models.AboutViewModel
@{
    ViewBag.AdminTitle = "Hakkımda Düzenleme Sayfası";
}
<hr />

@section customAdminScripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

<!----master-->
@using (Html.BeginForm("Edit", "About", FormMethod.Post))
{
    <div class="form-group">
        <div class="row">
            <!--Validationlarla alakalı uyarıları bana göster-->
            @Html.ValidationSummary()
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <!-- <label>Başlık</label>-->
                @Html.DisplayNameFor(i => i.Title)
            </div>
            <div class="col">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Başlık giriniz.", required = "required" })
                @Html.ValidationMessageFor(i => i.Title, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(i => i.Description)
            </div>
            <div class="col">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "İçerik giriniz" } })
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Düzenle" class="btn btn-info justify-content-end" />
    </div>
}
